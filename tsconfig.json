{
  "compilerOptions": {
	"target": "ESNext",
	"module": "commonjs",
	"lib": [
	  "ESNext"
	],
	"rootDir": "./src/",
	"outDir": "./dist/",
	"strict": true,
	"moduleResolution": "node",
	"esModuleInterop": true,
	"allowSyntheticDefaultImports": true,
	"resolveJsonModule": true,
	"forceConsistentCasingInFileNames": true,
	"removeComments": true,
	"sourceMap": true,
	"baseUrl": "./src",
	"paths": {
	  "@/*": [
		"./*"
	  ],
	  "@interactions/*": [
		"./interactions/*"
	  ],
	  "@helpers/*": [
		"./helpers/*"
	  ]
	}
  },
  "include": [
	"src/**/*.ts"
  ]
}
